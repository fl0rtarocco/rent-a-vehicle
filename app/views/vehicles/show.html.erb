<div class="vehicle-container">
  <div class="vehicle-details-card">
    <h1><%= @vehicle.name %></h1>
    <div class="details-section">
      <p class="category"><%= @vehicle.category %></p>
      <p class="price"><%= @vehicle.price %> â‚¬ per day</p>
    </div>
    <div  id="carousel-style">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
        <% if @vehicle.photos.any? %>
          <% @vehicle.photos.each_with_index do |photo, index| %>
            <div class="carousel-item  <%= index == 0 ? "active" : "" %> "> 
              <%= cl_image_tag(photo.key, class: "d-block w-100") %>
            </div>
          <% end %>
        <% else %>
          <img class="vehicle-image" src="http://t1.gstatic.com/licensed-image?q=tbn:ANd9GcRisOP5rFA5ldi7r3Bo1P53q9VfNZ6ligXR17S3z4vPodIvdJn2HWAM1BkU7knn8XEwY8tAtFM5kYlaKQA_M4I" alt="vehicle picture">
        <% end %>
        </div>
      <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
      </div>
    <h3>Details</h3>
    <p><%= @vehicle.description %></p>
    <div class="edit"><%= link_to "Edit", edit_vehicle_path(@vehicle)%></div>
    <div class="delete"><%= link_to "Delete", vehicle_path(@vehicle), method: :delete %></div>
  </div>
  <% if current_user %>
    <% unless current_user.id == @vehicle.user.id %>
      <div class="booking-request">
        <%= link_to "Request a booking", new_vehicle_booking_path(@vehicle), class: "btn-ghost" %>
      </div>
    <% end %>
  <% else  %>
    <div class="booking-request">
      <%= link_to "Request a booking", new_vehicle_booking_path(@vehicle), class: "btn-ghost" %>
    </div>
  <% end %>
</div>

</div>

<div class="booking-request">
   <%= link_to "<- Back", vehicles_path, class: "btn-back" %>
</div>
